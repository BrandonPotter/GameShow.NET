<UserControl x:Class="GameShow.WpfApp.OperatorControls.ActivityOperatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameShow.WpfApp.OperatorControls"
             xmlns:wpftk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="480" d:DesignWidth="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="401*"/>
            <RowDefinition Height="79*"/>
        </Grid.RowDefinitions>
        <wpftk:PropertyGrid x:Name="pGrid" Grid.RowSpan="1"></wpftk:PropertyGrid>
        <Button Grid.Row="1" x:Name="runActivity" Click="runActivity_Click">Run Activity Now</Button>
    </Grid>
</UserControl>
