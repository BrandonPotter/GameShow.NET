<Window x:Class="GameShow.WpfApp.Dialogs.NewActivityTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameShow.WpfApp.Dialogs"
        mc:Ignorable="d"
        Title="New Activity" Height="300" Width="300" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="lbActivities" SelectionChanged="lbActivities_SelectionChanged"></ListBox>
        <Button x:Name="btnOK" Content="Add" Visibility="Hidden" Click="btnOK_Click" HorizontalAlignment="Left" Margin="107,1,0,0" Grid.Row="1" VerticalAlignment="Top" Width="95" Height="30"/>
    </Grid>
</Window>
